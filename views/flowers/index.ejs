<%- include('../partials/header') %>
    <header>
        <h1>What should I plant in Texas?</h1>
    </header>
    <h3>Search for Flowers:</h3>
    <form id="search-flowers" action="/flowers?" method="GET">  
        <label for="season">Season of Year: </label><select name="season">
            <option value="Winter">Winter</option>
            <option value="Spring">Spring</option>
            <option value="Summer">Summer</option>
            <option value="Fall">Fall</option>
        </select>
        <label for="light">Light Exposure: </label><select name="light">
            <option value="Full Sun">Full Sun</option>
            <option value="Partial Shade">Partial Shade</option>
            <option value="Full Shade">Full Shade</option>
        </select>
        <input type="submit" value="Search Flowers">
    </form>
    <% flowers.forEach(function(f){ %>
        <div class="flower">
            <div class="flower-img">
                <img src="<%= f.image %>"" alt="flower">
            </div>
            <div class="flower-info">
                <p class="flower-title"><%= f.name %></p>
                <p><span class="flower-label">Season of Year: </span><%= f.season %></p>
                <p><span class="flower-label">Light Exposure: </span><%= f.light %></p>
            </div>
            <div>
                <form action="/flowers/user" method="POST">
                    <input type="hidden" name="_id" value="<%= f._id %>">
                    <input type="hidden" name="name" value="<%= f.name %>">
                    <input type="hidden" name="season" value="<%= f.season %>">
                    <input type="hidden" name="light" value="<%= f.light %>">
                    <input type="hidden" name="image" value="<%= f.image %>">
                    <input type="submit" value="Add to My Flowers" class="favorite-button">
                </form>
            </div>
        </div>
    <% }); %>
<%- include('../partials/footer') %>